<%= turbo_stream_from "campaign_#{@campaign.id}" %>

<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <%= link_to "â† Back to Campaigns", campaigns_path, class: "text-blue-600 hover:text-blue-800 mb-4 inline-block" %>
    <h1 class="text-3xl font-bold text-gray-900"><%= @campaign.title %></h1>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
    <%= turbo_frame_tag "campaign_status" do %>
      <%= render "status", campaign: @campaign %>
    <% end %>

    <%= turbo_frame_tag "campaign_progress" do %>
      <%= render "progress", campaign: @campaign %>
    <% end %>

    <div class="bg-white rounded-lg shadow p-6">
      <div class="text-sm text-gray-500 mb-1">Total Recipients</div>
      <div class="text-2xl font-semibold text-gray-900"><%= @campaign.total_count %></div>
    </div>
  </div>

  <%= turbo_frame_tag "dispatch_button" do %>
    <%= render "dispatch_button", campaign: @campaign %>
  <% end %>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Recipients</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody id="recipients_list" class="bg-white divide-y divide-gray-200">
          <% @campaign.recipients.order(:id).each do |recipient| %>
            <%= render "recipients/recipient", recipient: recipient %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
